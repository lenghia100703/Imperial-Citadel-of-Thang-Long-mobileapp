<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".route.BookTicket"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/back"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt vé tham quan"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textColor="@color/dark_yellow"
            android:textSize="30sp"
            android:textStyle="bold" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/floral_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhập số lượng người"
                android:layout_marginTop="5dp"
                android:textColor="@color/dark_yellow"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/quantity"
                android:background="@drawable/edittext_login"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:hint="Số lượng người"
                android:textColor="@color/black"
                tools:ignore="RtlSymmetry" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginTop="30dp"
                >

                <Button
                    android:id="@+id/viewTransaction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/dark_yellow"
                    android:textColor="@android:color/white"
                    android:text="Xem lịch sử đặt"/>

                <View
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/paymentButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/dark_yellow"
                    android:textColor="@android:color/white"
                    android:text="Thanh toán"/>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu ý:"
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_yellow"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Đơn vị tiền tệ sử dụng để thanh toán là Đô la Mỹ (USD)."
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_yellow"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Mỗi vé có giá là 2 USD với mọi đối tượng."
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_yellow"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Yêu cầu nhập đúng, đủ số lượng người tham gia tham quan, hạn chế tối đa việc đăng ký thừa người."
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_yellow"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</LinearLayout>